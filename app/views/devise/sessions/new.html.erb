<div class="container-login">
  <div class="col s12 m7">
      <div class="row"><h5 class="header center-align">Please, login into your account</h5></div>
      <div class="card horizontal blue-grey lighten-5">
        <div class="card-stacked">
          <div class="card-content">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <% if alert %>
                <div class="alert alert-danger"><%= alert %></div>
              <% end %>
              <% if notice %>
                <div class="alert alert-success"><%= notice %></div>
              <% end %>
              <div class="form-group">
                <%= f.label :email, class: "sr-only" %>
                <i class="fa fa-user"></i>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control input-login", placeholder: "Email" %>
              </div>
              <div class="form-group">
                <%= f.label :password, class: "sr-only" %>
                <i class="fa fa-lock"></i>
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control input-login", placeholder: "Password" %>
              </div>
              <div class="form-group c">
                <button class="waves-effect waves-light btn" type="submit" name="action">
                  <i class="material-icons left">login</i>Login
                </button>
              </div>
            <% end %>
          </div>
        </div>
      </div>
  </div>
</div>