
<div class="card horizontal grey lighten-5 container-login">
  <div class="card-stacked">
    <div class="card-content">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row">
          <%= f.label :username, class: "sr-only" %>
          <i class="fa fa-user"></i>
          <%= f.text_field :username, autofocus: true, class: "form-control input-login", placeholder: "Username" %>
        </div>
        <div class="row">
          <%= f.label :password, class: "sr-only" %>
          <i class="fa fa-lock"></i>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control input-login", placeholder: "Password" %>
        </div>
        <div class="row center-align">
          <button class="waves-effect waves-light btn-large btn-block" type="submit" name="action">
            <i class="material-icons center">login</i> Login
          </button>
        </div>
      <% end %>
    </div>
    <div id="error_explanation" class="center-align">
      <%= flash[:alert]%>
    </div>
  </div>
</div>