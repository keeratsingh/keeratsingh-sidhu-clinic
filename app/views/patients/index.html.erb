<p id="notice"><%= notice %></p>

<h1>Patients</h1>
<%= search_form_for @q do |f| %>
  <%= f.label :first_name_or_last_name_or_phone_number_cont, "Search by Patient Name or Phone Number" %>
  <%= f.search_field :first_name_or_last_name_or_phone_number_cont %>

  <%= f.label :dob_eq, "Search by Patient Date of Birth (DD-MM-YYYY)" %>
  <%= f.search_field :dob_eq %>

  <br>
  <%= f.submit %>
<% end %>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Dob</th>
      <th>Phone number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.first_name %></td>
        <td><%= patient.last_name %></td>
        <td><%= patient.dob.strftime("%d-%B-%Y") %></td>
        <td><%= patient.phone_number %></td>
        <td><%= link_to 'Show', patient %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @patients %>

<br>

<%= link_to 'Create New Patient', new_patient_path %>
